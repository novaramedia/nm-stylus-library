html
  background-color: var(--color-white-soft)
  color: var(--color-black-soft)

body
  overscroll-behavior: none

img
  max-width: 100%
  height: auto

h1
  margin: 0

// DISPLAY HELPERS

.only-mobile
  display: none

@media screen and (max-width: $breakpoint-s)
  .only-mobile
    display: var(--mobile-display, revert)

  .display-s-block
    display: block

  .only-desktop
    display: none !important

  .grid-row.only-mobile // but also we wanna specifcally set a few key classes?
    --mobile-display: flex