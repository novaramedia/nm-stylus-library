// Layout Module
// CSS Grid and Flexbox layout utilities.
//
// Container sizing is NOT defined here â€” consuming projects must define their own
// .container class with --container-{size} CSS custom properties at each breakpoint.
// This allows each product to choose which breakpoint sizes to implement.
//
// Example in consuming project:
//   .container
//     margin-left: auto
//     margin-right: auto
//     width: var(--container-xl)
//   @media screen and (max-width: $breakpoint-m)
//     .container
//       width: var(--container-m)

// CSS Grid

.layout-grid
  display: grid
  grid-template-columns: repeat(24, minmax(0, 1fr))
  column-gap: var(--grid-gutter)
  row-gap: 0
  grid-auto-rows: auto

// Utilties

.layout-split-level
  display: flex
  align-items: center
  justify-content: space-between

.layout-split-vertical
  display: flex
  flex-direction: column
  justify-content: space-between
  flex: 1
  height: 100%

.layout-flex-align-center
  display: flex
  align-items: center

.layout-flex-justify-right
  display: flex
  justify-content: flex-end

.layout-thumbnail-frame
  position: relative
  .layout-thumbnail-frame__inner
    position: absolute
    display: flex
    top: 0
    left: 0
    z-index: 10
  img
    display: block

// Flex helpers

.layout-flex
  display: flex

.layout-flex-no-shrink
  flex-shrink: 0

.layout-flex-grow
  flex-grow: 1

// Display helpers
.layout-overflow-hidden
  overflow: hidden
