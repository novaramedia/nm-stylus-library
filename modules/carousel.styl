// Carousel Module
// Styles for Swiper.js carousel navigation and items.
// Swiper JS must be loaded separately — this only provides the CSS.
//
// .swiper-button-prev / .swiper-button-next — Navigation arrows (full-height click areas)
//   --disabled modifier hides the button
// .ux-carousel__item — Generic carousel slide with fixed width and right margin

.swiper-button-prev, .swiper-button-next
  display: flex
  justify-content: center
  align-items: center
  position: absolute
  top: 0
  height: 100%
  width: 3rem
  cursor: pointer
  z-index: 10
  transition: opacity var(--transition-speed-quick) ease-in-out
  &--disabled
    opacity 0
    z-index: -10

.swiper-button-prev
  left: 0

.swiper-button-next
  right: 0

.ux-carousel__item
  flex-shrink: 0
  max-width: 100%
  width: 200px
  margin-right: 1rem
  &:last-child
    margin-right: 0
