.swiper-button-prev, .swiper-button-next
  display: flex
  justify-content: center
  align-items: center
  position: absolute
  top: 0
  height: 100%
  width: 3rem
  cursor: pointer
  z-index: 10
  transition: opacity var(--transition-speed-quick) ease-in-out
  &--disabled
    opacity 0
    z-index: -10

.swiper-button-prev
  left: 0

.swiper-button-next
  right: 0

.ux-carousel__item
  flex-shrink: 0
  max-width: 100%
  width: 200px
  margin-right: 1rem
  &:last-child
    margin-right: 0

.alt-ux-carousel__item
  height: 250px;
  margin: 0 4px;
  box-sizing: border-box;
  background-color: var(--color-white-soft);
  opacity: 0.5;

.swiper-pagination-bullet
  display: inline-block;
  width: 10px;
  height: 2px;
  background-color: var(--color-gray-light-transparent)
  margin: 0 4px;
  transition: opacity 0.3s ease;

.swiper-pagination-bullet-active
  background-color: var(--color-black-soft);
  opacity: 1;

.swiper
  position: relative;

.swiper-pagination
  position: absolute;
  bottom: 1rem;
  left: 0;
  right: 0;
  z-index: 10;
  display: flex;
  justify-content: center;
  pointer-events: auto;

.swiper-slide-active
  opacity: 1;
