// Carousel Module
// Styles for Swiper.js pagination, navigation, and carousel items.
// Swiper JS must be loaded separately by the consuming project.

.swiper
  position: relative

.swiper-pagination
  position: absolute
  bottom: 1rem
  left: 0
  right: 0
  z-index: 10
  display: flex
  justify-content: center
  pointer-events: auto

.swiper-pagination-bullet
  display: inline-block
  width: 14px
  height: 3px
  background-color: var(--color-gray-mid)
  margin: 0 4px
  transition: opacity 0.3s ease

.swiper-pagination-bullet-active
  background-color: var(--color-black-soft)
  opacity: 1

.swiper-button-prev, .swiper-button-next
  display: flex
  justify-content: center
  align-items: center
  position: absolute
  top: 0
  height: 100%
  width: 3rem
  cursor: pointer
  z-index: 10
  transition: opacity var(--transition-speed-quick) ease-in-out
  &--disabled
    opacity 0
    z-index: -10

.swiper-button-prev
  left: 0

.swiper-button-next
  right: 0

.ux-carousel__item
  flex-shrink: 0
  max-width: 100%
  width: 200px
  margin-right: 1rem
  &:last-child
    margin-right: 0

