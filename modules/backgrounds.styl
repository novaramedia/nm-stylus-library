// Backgrounds Module
// Utility classes mapping design system colors to background-color.
// Named .background-{color} for each color in the palette.
//
// Also provides:
//   .background-cover-image — Full-bleed background image with cover sizing
//   .background-cover-overlay — Absolute positioned overlay for image tinting

.background-black
  background-color: var(--color-black-soft)

.background-white
  background-color: var(--color-white-soft)

.background-gray
  background-color: var(--color-gray)

.background-light-gray
  background-color: var(--color-gray-light)

.background-red
  background-color: var(--color-red)

.background-yellow
  background-color: var(--color-yellow)

.background-green
  background-color: var(--color-green)

.background-green-neon
  background-color: var(--color-green-neon)

.background-light-blue
  background-color: var(--color-blue-light)

.background-neon-blue
  background-color: var(--color-blue-neon)

.background-teal
  background-color: var(--color-teal)

.background-lilac
  background-color: var(--color-lilac)

.background-light-purple
  background-color: var(--color-lilac)

.background-acfm-pink
  background-color: var(--color-acfm-pink)

.background-cover-image
  position: relative
  background-size: cover
  background-position: center
  background-repeat: no-repeat

.background-cover-overlay
  position: absolute
  top: 0
  width: 100%
  height: 100%
